<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".CreateChallengeActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="40dp"
        android:layout_width="410dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="1. Geben sie dem Wettkampf einen eindeutigen Namen. ( Hierüber werden die anderen user den Wettkampf finden)"
        android:layout_marginTop="72dp"
        android:id="@+id/textView"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Name"

        android:id="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="2. Sobald Sie den Button nutzen, weerden sie auf die nächste Seite geleitet auf welcher Sie bis zu 10 berge auswählen und benennen können"
        android:layout_marginTop="40dp"
        android:id="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintHorizontal_bias="0.0"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="3. Sobald Sie den letzten Berg benannt haben betätigen Sie den Button Wettkampf erstellen anstatt den normalen Berg hinzufügen Button"
        android:layout_marginTop="36dp"
        android:id="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.0"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Name bestätigen"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_firstStep"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>